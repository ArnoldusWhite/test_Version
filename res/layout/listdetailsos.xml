<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TabFirst"
        android:layout_marginTop="10sp"
       >
        <TableRow 
            android:id="@+id/TabRow"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingBottom="5sp"
             android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            >
            <ImageView android:layout_width="25sp"
                android:layout_height="25sp"
                android:id="@+id/imgSOS"
                android:contentDescription="image d'un sos"
                android:layout_marginRight="65sp"/>
            <TextView 
                android:id="@+id/Textobjet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="12/05/2014 18:35:05"
                />
            <TextView 
                android:id="@+id/TextContenu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="moi"
                />
            <TextView 
                android:id="@+id/TextDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="12/05/2014 18:35:05"
               />
            
        </TableRow>
    </TableLayout>

</LinearLayout>
